{
  "manifest_version": 3,
  "name": "Nimbus Link",
  "version": "1.0",
  "description": "A unified storage for managing Google Drive, Dropbox, OneDrive, and more â€” all in one place.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "identity"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "host_permissions": [
    "https://www.googleapis.com/*",
    "https://api.dropboxapi.com/*",
    "https://graph.microsoft.com/*"
  ]
}
